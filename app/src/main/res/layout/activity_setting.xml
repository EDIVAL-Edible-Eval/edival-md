<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingActivity">

    <ImageButton
        android:id="@+id/backarrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/btnback"
        android:layout_margin="25dp"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        />

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/user_image"
        app:layout_constraintStart_toStartOf="@id/backarrow"
        app:layout_constraintTop_toBottomOf="@id/backarrow"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        style="@style/tvSubTitle_Style"
        android:text="@string/name"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_user"
        app:layout_constraintTop_toTopOf="@id/image_user"
        app:layout_constraintBottom_toBottomOf="@id/tv_email"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        style="@style/tvRegular_Style"
        android:fontFamily="@font/inter"
        android:text="@string/email"
        app:layout_constraintBottom_toBottomOf="@id/image_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_user"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/setprofile"
        android:textAllCaps="false"
        android:textColor="@color/orange1"
        android:drawableLeft="@drawable/pencil"
        android:drawablePadding="1dp"
        android:textAlignment="textStart"
        android:paddingLeft="32dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/image_user"/>


    <Button
        android:id="@+id/btnTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/theme"
        android:drawablePadding="1dp"
        android:textAlignment="textStart"
        android:paddingLeft="32dp"
        android:text="@string/settheme"
        android:textAllCaps="false"
        android:textColor="@color/orange1"
        app:layout_constraintEnd_toEndOf="@+id/btnEditProfile"
        app:layout_constraintStart_toStartOf="@id/btnEditProfile"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"/>
    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setlang"
        android:textAllCaps="false"
        android:textColor="@color/orange1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/language"
        android:drawablePadding="1dp"
        android:textAlignment="textStart"
        android:paddingLeft="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@id/btnTheme"
        app:layout_constraintStart_toStartOf="@id/btnTheme"
        app:layout_constraintTop_toBottomOf="@id/btnTheme"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@color/orange1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/logout"
        android:drawablePadding="1dp"
        android:textAlignment="textStart"
        android:paddingLeft="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@id/btnLanguage"
        app:layout_constraintEnd_toEndOf="@id/btnLanguage"
        app:layout_constraintTop_toBottomOf="@id/btnLanguage"/>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0.1"
        style="@style/tvRegular_Style"
        android:fontFamily="@font/inter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>